<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/txtcalculations"
        android:gravity="center|start"
        android:background="@color/white"
        android:text="Calculation"/>


    <TextView
        android:id="@+id/ResultTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid"
        android:layout_below="@+id/txtcalculations"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:background="@color/resultbg"
        android:gravity="center|end"
        android:padding="10dp"
        android:text="Operation"
        android:textSize="40dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:id="@+id/grid"
        android:layout_marginBottom="0dp"
        android:columnCount="4">

        <TextView
            android:id="@+id/btnone"
            style="@style/CustomTextView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="1" />

        <TextView
            android:id="@+id/btntwo"
            style="@style/CustomTextView"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="2" />

        <TextView
            android:id="@+id/btnthree"
            style="@style/CustomTextView"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="3" />

        <TextView
            style="@style/CustomTextView"
            android:layout_row="0"
            android:layout_column="3"
            android:id="@+id/btndivide"
            android:background="@drawable/divide"
            android:layout_columnSpan="1"
            android:text=" " />



        <TextView
            android:id="@+id/btnfour"
            style="@style/CustomTextView"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="4" />

        <TextView
            android:id="@+id/btnfive"
            style="@style/CustomTextView"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="5" />

        <TextView
            android:id="@+id/btnsix"
            style="@style/CustomTextView"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="6" />

        <TextView
            style="@style/CustomTextView"
            android:layout_row="1"
            android:layout_column="3"
            android:id="@+id/btnplus"
            android:layout_columnSpan="1"
            android:background="@drawable/plus"
            android:text=" " />


        <TextView
            android:id="@+id/btnseven"
            style="@style/CustomTextView"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="7" />

        <TextView
            android:id="@+id/btneight"
            style="@style/CustomTextView"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:text="8" />

        <TextView
            android:id="@+id/btnnine"
            style="@style/CustomTextView"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="9" />

        <TextView
            style="@style/CustomTextView"
            android:layout_row="2"
            android:id="@+id/btnminus"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:background="@drawable/subtract"
            android:text=" " />



        <TextView
            style="@style/CustomTextView"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:text="4" />

        <TextView
            android:id="@+id/btncancel"
            style="@style/CustomTextView"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="C" />

        <TextView
            android:id="@+id/btnZero"
            style="@style/CustomTextView"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="0" />

        <TextView
            style="@style/CustomTextView"
            android:layout_row="3"
            android:layout_column="3"
            android:id="@+id/btnmultiply"
            android:layout_columnSpan="1"
            android:background="@drawable/baseline_cancel_24"
            android:text="  " />



        <TextView
            style="@style/CustomTextView"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:id="@+id/btnEqual"
            android:background="@drawable/equal"
            android:text="  " />




    </GridLayout>


</RelativeLayout>